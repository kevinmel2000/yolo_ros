<launch>
  <arg name="thresh" default="0.24"/>
  <arg name="device" default="0"/>

  <node pkg="cv_camera" name="cv_cam_node" type="cv_cam_node">
    <param name="device_id" value="$(arg device)"/>
  </node>
  <include file="$(find yolo_ros)/launch/yolo.launch">
    <arg name="thresh" value="$(arg thresh)"/>
    <arg name="input" value="/cv_camera/image_raw"/>
  </include>
</launch>
